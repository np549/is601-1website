   class stringFunctions {
      static public function printf($string){
          print ($string);
          echo ("<br>");}
     static public function strlen ($string){
         echo ("the length of the string is  ");
         echo strlen($string);
         echo ("<br>");}
     static public function str_shuffle ($str){
         echo ("output is ---   ");
         echo str_shuffle($str);
         echo ("<br>");}
     static public function strtoupper ($str){
         echo ("Now output is ---   ");
         echo strtoupper ($str);
         echo ("<br>");}
     static public function str_word_count ($str){
         echo ("The word count is ---   ");
         echo str_word_count ($str);
         echo ("<br>");}
     static public function Str_replace ($str, $str1, $str2){
         echo ("Now output is ---   ");
         echo Str_replace ($str, $str1, $str2);
         echo ("<br>");}
      static public function str_repeat( $str, $times){
         echo str_repeat( $str, 10);
         echo ("<br>");}
      static public function strcmp($str1, $str2){
         echo strcmp($str1, $str2);
         echo ("<br>");}
       static public function strrev ($str){
         echo ("output is ---   ");
         echo strrev($str);
         echo ("<br>");}
      static public function number_format($num,$dec){
         echo ("output is ---   ");
         echo number_format($num,$dec);
         echo ("<br>");}
  
      }
 class ArrayFunctions {
        static public function print_r($myarray){
          print_r ($myarray);
          echo ("<br>");}
        static public function array_shuffle($myarray){
          shuffle($myarray);
          print_r($myarray);
          echo ("<br>");}
        static public function array_diff($a1, $a2){
          $result=array_diff($a1,$a2);
          print_r($result);
          echo ("<br>");}
        static public function array_keys($a1,$input){
          print_r(array_keys($a1,$input));
          echo ("<br>");}
        static public function array_merge($a1,$a2){
          print_r(array_merge($a1,$a2));
          echo ("<br>");}
        static public function array_push($myarray, $input){
          array_push($myarray, $input);
          print_r($myarray);
          echo ("<br>");}
        static public function array_reverse($myarray){
          print_r(array_reverse($myarray));
          echo ("<br>");}
        static public function array_search($input,$myarray){
        echo array_search($input,$myarray);
        echo ("<br>");}
         static public function array_slice($myarray,$input){
          print_r( array_slice($myarray,$input));
          echo ("<br>");}
        static public function array_replace($a1, $a2){
          $result=array_replace($a1,$a2);
          print_r($result);
          echo ("<br>");}
     }
   
